<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image url</th>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Date of publication</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book.image_url %>" alt=""  class="img-responsive"></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
<% if false %>  <td><%= book.price %></td> <% end %>
        <td><%= number_to_currency(book.price, unit: '¥', precision: 0) %></td>
        <td><%= book.publisher %></td>
        <td><%= book.date_of_publication.strftime('%Y/%m/%d') %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '本を登録', new_book_path,class:"btn btn-warning " %>
<% if false %><%= link_to 'New Book', new_book_path %><% end %>
